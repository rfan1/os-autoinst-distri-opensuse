        <arch>{{ARCH}}</arch>
      </addon>
      <addon>
        <name>sle-module-development-tools</name>
        <version>{{VERSION}}</version>
        <arch>{{ARCH}}</arch>
      </addon>
      <!-- HACK!!! Should be added in normal installation
